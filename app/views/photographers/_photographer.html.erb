<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="photographer-card">
    <div class="photographer-photo" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= photographer.photos.first.url %>) center / cover no-repeat;"></div>
    <div class="photographer-details">
      <div class="photographer-name">
        <%= photographer.user.first_name %>
      </div>
      <div class="photographer-row">
        <span class="photographer-location">
          <%= photographer.location.capitalize %>
        </span>
      </div>
    </div>
    <div class="photographer-action text-center">
      <%= link_to "View", photographer_path(photographer), class: "btn btn-default btn-primary"  %>
    </div>
  </div>
</div>
