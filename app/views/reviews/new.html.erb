<div class="container">
   <div class="row">
          <h1 class="text-center"> Add your review concerning <%= @photographer.user.first_name %></h1>
            <div class="row">


<%= form_for [@appointment, @review] do |f| %>

  <div class="form-group">

    <%= f.label :stars %>
    <%= f.text_field :stars, placeholder: "Please enter a number from 1 ( poor ) to 5 ( perfect) ", class: 'form-control' %>

  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, placeholder: "Please enter your comment...", class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>
        </div>
      </div>
  </div>
</div>
